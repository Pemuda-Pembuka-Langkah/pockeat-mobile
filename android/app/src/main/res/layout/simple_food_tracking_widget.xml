<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Circular Progress Container -->
    <RelativeLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <!-- Circular background -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true">

            <!-- Background Circle -->
            <View
                android:id="@+id/background_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background"/>

            <!-- Progress Arc - menggunakan drawable level untuk menampilkan persentase -->
            <ImageView
                android:id="@+id/progress_arc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_progress"
                android:contentDescription="Progress indicator"/>

            <!-- Calorie Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/calories_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/2000"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <!-- Log Food Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_container"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/log_food_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/button_background"
            android:text="Log your food"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
